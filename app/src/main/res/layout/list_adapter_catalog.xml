<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    
    <ImageView
        android:id="@+id/recipes_list_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/wine_1"/>
    
    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/recipes_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/welcome"
            android:layout_marginTop="5dp"/>

        <com.enology.fonts.FontTextView
            android:id="@+id/recipes_list_domain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/welcome"/>

        <com.enology.fonts.FontTextView
            android:id="@+id/recipes_list_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:text="@string/welcome"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/recipes_mark_1"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/recipes_mark_on"/>

            <ImageView
                android:id="@+id/recipes_mark_2"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/recipes_mark_on"/>

            <ImageView
                android:id="@+id/recipes_mark_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/recipes_mark_on"/>

            <ImageView
                android:id="@+id/recipes_mark_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/recipes_mark_off"/>

            <ImageView
                android:id="@+id/recipes_mark_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/recipes_mark_off"/>

        </LinearLayout>

        <com.enology.fonts.FontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/recipes_red_price"
            android:text="@string/eurotmp"/>

    </LinearLayout>

</LinearLayout>
